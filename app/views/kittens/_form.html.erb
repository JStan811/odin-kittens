<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>

<% if @kitten.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@kitten.errors.count, "error") %> prohibited this kitten from being borne to Asgard:</h3>

    <ul>
      <% @kitten.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @kitten do |f| %>
  <%= f.label :name, 'Name:' %>
  <%= f.text_field :name %>
  <%= f.label :age, 'Age:' %>
  <%= f.number_field :age, in: 1..38 %>
  <%= f.label :cuteness, 'Cuteness:' %>
  <%= f.number_field :cuteness, in: 1..10 %>
  <%= f.label :softness, 'Softness:' %>
  <%= f.number_field :softness, in: 1..10 %>
  <%= f.submit "Submit" %>
<% end %>
